extends layout

block content
    div(class='container')
        div(class='title-container')
            h1(class='text-center text-danger align-center') 
                img(class='logoImg' src='/img/logo.jpg' id='logo')
        p(class='lead') Search for a medical procedure and your zip code to find the cheapest hospitals nearby.
        div(class='row')
            div(class='form-group col-sm-5 col-xs-6')
                label(class='sr-only', for='input-procedure') Procedure
                select(class='form-control', id='input-procedure', name='input-procedure', placeholder='Medical Procedure' rquired)        
            div(class='form-group col-sm-5 col-xs-4')
                label(class='sr-only', for='zip') Zip Code
                input(type='zipcode', class='form-control', id='input-zipcode', name='zipcode', placeholder='Zip Code' required)
            button(class='btn btn-primary col-sm-2 col-xs-2' id='search-submit')
                span(class='glyphicon glyphicon-search')
                span &nbsp; Search
        if {zipcode}
            p #{zipcode}
        if {procedure}
            p #{procedure}

        div(id='row')
            div(class='col-sm-6 col-md-8')
                div(id='gMap', style="width:100%;height:500px;")
            div(class='col-sm-6 col-md-4')
                div(id='care-stats')
                    h4(id='care-stats-primary')
                        span Cost of&nbsp;
                        span(id='care-stats-procedure' class='text-info')
                        span &nbsp;near&nbsp;
                        span(id='care-stats-place' class='text-info')
                    table(class='table')
                        tr(class='info')
                            td(class='') Average near #[span(id='lookup-zip')]
                            td(class='', id='average-price-local')
                        tr
                            td(class='') #[span(id='lookup-state')] average
                            td(class='',  id='average-price-state')
                        tr
                            td(class='') National average
                            td(class='',  id='average-price-national')
                    div(class='panel panel-success')
                        div(class='panel-heading')
                            h3(class='panel-title') Cheapest: #[span(id='cheapest-price')]
                        div(class='panel-body')
                            p
                                strong(id='cheapest-name')
                                br
                                span(id='cheapest-address')
                    div(class='panel panel-danger')
                        div(class='panel-heading')
                            h3(class='panel-title') Priciest: #[span(id='priciest-price')]
                        div(class='panel-body')
                            p
                                strong(id='priciest-name')
                                br
                                span(id='priciest-address')
                                
                                
